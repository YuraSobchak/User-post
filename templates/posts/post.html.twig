{% extends 'base.html.twig' %}

{% block title %}Post {{ post.id }}{% endblock %}

{% block body %}
    <div>
        <a href="{{ path('createPost') }}">New Post</a>
    </div>
    <div>
        {% if post.image %}
            <img id="img" src="{{ asset('images/' ~ post.image) }}" height="200px">
        {% endif %}
        <div>Title: {{ post.title }}</div>
        <div>Author: {{ post.author.email }}</div>
        <div>Description: {{ post.description }}</div>
        <div>Created: {{ post.date|date("m/d/Y") }}</div>
    </div>
{% endblock %}
